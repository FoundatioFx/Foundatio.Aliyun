{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "build",
        "command": "dotnet",
        "type": "process",
        "args": [
            "build",
            "${workspaceFolder}/tests/Foundatio.Aliyun.Tests/Foundatio.Aliyun.Tests.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary;ForceNoAlign"
        ],
        "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "args": [
        "test",
        "${workspaceFolder}/tests/Foundatio.Aliyun.Tests/Foundatio.Aliyun.Tests.csproj",
        "/p:GenerateFullPaths=true"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "pack",
      "command": "dotnet pack -c Release -o ${workspaceFolder}/artifacts",
      "type": "shell",
      "problemMatcher": []
    },
    {
        "label": "publish",
        "command": "dotnet",
        "type": "process",
        "args": [
            "publish",
            "${workspaceFolder}/tests/Foundatio.Aliyun.Tests/Foundatio.Aliyun.Tests.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary;ForceNoAlign"
        ],
        "problemMatcher": "$msCompile"
    },
    {
        "label": "watch",
        "command": "dotnet",
        "type": "process",
        "args": [
            "watch",
            "run",
            "--project",
            "${workspaceFolder}/tests/Foundatio.Aliyun.Tests/Foundatio.Aliyun.Tests.csproj"
        ],
        "problemMatcher": "$msCompile"
    }
  ]
}